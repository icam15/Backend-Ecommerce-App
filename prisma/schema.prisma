generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ECOMMERCEADMIN
  STOREADMIN
  CUSTOMER
}

enum UserStatus {
  VERIFIED
  UNVERIFIED
}

model User{
  id Int
  email String
  password String
  imageUrl String
  role UserRole
  displayName String
  isVerified UserStatus
  phoneNumber Int
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt 
}

model UserToken{
  id Int
  verifyToken String
  verifyToken_exp DateTime
  resetPasswordToken String
  resetPasswordToken_Exp DateTime
}

model UserToken{}